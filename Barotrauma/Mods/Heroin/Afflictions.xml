<Afflictions>
 <!-- Debuffs -->
<Affliction
    name="Opiate High"
    identifier="ohigh"
    description="The Patient has Small pupils and a worrying lack of coordination."
    type="poison"
    causeofdeathdescription="Overdosed"
    selfcauseofdeathdescription="You have died of an overdose"
    limbspecific="false"
    indicatorlimb="Head"
    activationthreshold="20"
    showiconthreshold="1000"
    maxstrength="100">

    <!-- Low level of drunkenness decreases vitality and speed slightly -->
    <Effect minstrength="20" maxstrength="37"
      minvitalitydecrease="0"
      maxvitalitydecrease="0"
      minvitalityincrease="3"
      maxvitalityincrease="10"
      minscreendistort="0"
      maxscreendistort="0.1"
      strengthchange="-0.1">
      <StatusEffect target="Character" SpeedMultiplier="0.7" setvalue="true"/>
    </Effect>
    <Effect minstrength="38" maxstrength="39" strengthchange="0"
      minvitalityincrease="6"
      maxvitalityincrease="12">
      <StatusEffect target="Character">
        <Affliction identifier="psychosisresistance" amount="41"/>
     </StatusEffect>
     </Effect>

    <!-- Heavier drunkenness decreases vitality and speed more -->
    <Effect minstrength="40" maxstrength="77"
      minvitalitydecrease="0"
      maxvitalitydecrease="0"
      minvitalityincrease="10"
      maxvitalityincrease="24"
      minscreendistort="0.1"
      maxscreendistort="1.0"
      minscreenblur="0.1"
      maxscreenblur="1.0"
      strengthchange="-0.2"
      minradialdistort="0.0"
      maxradialdistort="5.0"
      dialogflag="HighMedium">
      <StatusEffect target="Character" SpeedMultiplier="0.7" setvalue="true"/>
    </Effect>
    <Effect minstrength="78" maxstrength="80" strengthchange="-0.1"
      minvitalitydecrease="30"
      maxvitalitydecrease="40"
      minvitalityincrease="0"
      maxvitalityincrease="0"
      minscreendistort="1.0"
      maxscreendistort="1.0"
      minscreenblur="1.0"
      maxscreenblur="1.0"
      minradialdistort="5.0"
      maxradialdistort="5.0">
      <StatusEffect target="Character">
        <Affliction identifier="hallucinating" amount="300"/>
	<Affliction identifier="nausea" amount="20"/>
	<Affliction identifier="stun" amount="100"/>
        <ReduceAffliction identifier="strengthen" amount="10"/>
	<Affliction identifier="opiateoverdose" amount="25"/>
     </StatusEffect>
     </Effect>

    <!-- After drinking enough the effect starts to get lethal -->
    <Effect minstrength="80" maxstrength="94"
      minvitalitydecrease="80"
      maxvitalitydecrease="100"
      minvitalityincrease="0"
      maxvitalityincrease="0"
      minscreendistort="1.0"
      maxscreendistort="3.0"
      minscreenblur="1.0"
      maxscreenblur="3.0"
      strengthchange="-0.2"
      minradialdistort="5.0"
      maxradialdistort="10.0"
      dialogflag="ExtremeHigh">
      <StatusEffect target="Character" SpeedMultiplier="0.5" setvalue="true"/>
      <StatusEffect target="Character">
	<ReduceAffliction identifier="strengthen" amount="15"/>
	<Affliction identifier="stun" amount="200"/>
	<Affliction identifier="oxygenlow" amount="5"/>
	<Afflicition identifier="nausea" amount="100"/>
	<Affliction identifier="hallucinating" amount="300"/>
	<Affliction identifier="opiateoverdose" amount="45"/>
	</StatusEffect>
     </Effect>
	<Effect minstrength="95" maxstrength="100" strengthchange="-0.1"
      minvitalitydecrease="105"
      maxvitalitydecrease="200">
      <StatusEffect target="Character">
        <Affliction identifier="stun" amount="200"/>
	<Affliction identifier="oxygenlow" amount="5"/>
	<Afflicition identifier="nausea" amount="100"/>
	<Affliction identifier="Psychosis" amount="100"/>
        <ReduceAffliction identifier="strengthen" amount="17"/>
	<Affliction identifier="opiateoverdose" amount="100"/>
     </StatusEffect>
     </Effect>
    
    
    <icon texture="Mods/Heroin/HeroinIcon.png" sourcerect="0,0,120,120" color="170,194,147,255" origin="0,0"/>
